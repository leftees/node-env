extends layout

block content
	h1= title
	p Welcome to #{title}
	div#app
		current(subject='Likes')
		current(subject='Dislikes')

	template#current-template
		h1.
			{{subject}}
		button(@click='count += 1').
			Count {{ count }}

	script(type='text/javascript').
		Vue.component('current', {
			template: '#current-template',

			props: ['subject'],

			data: function(){
				return {
					count: 0
				}
			}
		});
		new Vue({
			el: '#app',
			data: {
				count: 0
			},
			methods: {
				addOne: function(){
					this.count++;
				}
			}
		});